{
  "name": "watch-make",
  "version": "1.4.0",
  "description": "Watch makefile dependencies and run targets",
  "bin": {
    "wmake": "wmake.sh"
  },
  "scripts": {
    "bundle": "bundle-dependencies update",
    "prepublish": "rm -rf node_modules; npm install --production $(node -p 'require(\"./package.json\").bundledDependencies.join(\" \")'); npm dedupe; npm prune",
    "postpublish": "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quarterto/watch-make.git"
  },
  "keywords": [
    "watch",
    "make",
    "build"
  ],
  "author": "Matt Brennan <matt@153.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quarterto/watch-make/issues"
  },
  "homepage": "https://github.com/quarterto/watch-make#readme",
  "dependencies": {
    "@quarterto/hr-cli": "^1.0.0",
    "chalk-cli": "^2.0.0"
  },
  "devDependencies": {
    "bundle-dependencies": "^1.0.2"
  },
  "bundledDependencies": [
    "@quarterto/hr-cli",
    "chalk-cli"
  ]
}
