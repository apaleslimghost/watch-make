{
  "name": "watch-make",
  "version": "1.6.1",
  "description": "Watch makefile dependencies and run targets",
  "bin": {
    "wmake": "bin.js"
  },
  "scripts": {
    "bundle": "bundle-dependencies update",
    "prepublish": "in-publish && rm -rf node_modules; npm install --production $(node -p 'require(\"./package.json\").bundledDependencies.join(\" \")') || true",
    "postpublish": "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quarterto/watch-make.git"
  },
  "keywords": [
    "watch",
    "make",
    "build"
  ],
  "author": "Matt Brennan <matt@153.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quarterto/watch-make/issues"
  },
  "homepage": "https://github.com/quarterto/watch-make#readme",
  "dependencies": {
    "@quarterto/format-cli-args": "^1.2.0",
    "@quarterto/spawn-args": "^1.0.0",
    "@quarterto/symbol-logger": "^1.6.0",
    "chalk": "^1.1.3",
    "chalk-cli": "^2.0.0",
    "chokidar": "^1.6.0",
    "hr-cli": "^1.0.0",
    "pluralize": "^3.0.0",
    "split": "^1.0.0"
  },
  "devDependencies": {
    "bundle-dependencies": "^1.0.2",
    "in-publish": "^2.0.0"
  },
  "bundledDependencies": [
    "chalk-cli",
    "hr-cli"
  ]
}
